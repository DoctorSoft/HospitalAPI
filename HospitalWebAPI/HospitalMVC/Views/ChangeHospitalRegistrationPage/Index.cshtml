
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ServiceModels.ServiceCommandAnswers.HospitalRegistrationsCommandAnswers.GetChangeHospitalRegistrationsPageInformationCommandAnswer

<div class="calendar">
    <div class="panel panel-default">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Monday
                    </th>
                    <th>
                        Tuesday
                    </th>
                    <th>
                        Wednesday
                    </th>
                    <th>
                        Thursday
                    </th>
                    <th>
                        Friday
                    </th>
                    <th>
                        Saturday
                    </th>
                    <th>
                        Sunday
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Schedule)
                {
                    <tr>
                        @foreach (var cell in item.Cells.Values)
                        {
                            if (cell.IsBlocked)
                            {
                                <td>
                                    <div style="height: 150px; width: 150px; max-width: 150px; max-height: 150px; vertical-align: middle" class="text-center btn btn-block">
                                        <h2>@cell.Day</h2>
                                    </div>
                                </td>
                            }
                            else
                            {
                                if (cell.IsThisDate)
                                {
                                    <td>
                                        <div style="height: 150px; width: 150px; max-width: 150px; max-height: 150px; vertical-align: middle" class="text-center btn btn-primary">
                                            <span class="glyphicon glyphicon-star" aria-hidden="true"></span> <h2>@cell.Day</h2>
                                        </div>
                                    </td>
                                }
                                else
                                {
                                    if (cell.IsStarted)
                                    {
                                        if (cell.IsCompleted)
                                        {

                                            <td>
                                                <a href="@Url.Action("Step2", "ChangeHospitalRegistrationPage", new {Token = Model.Token, Date = cell.Date})" alt="">
                                                    <div style="height: 150px; width: 150px; max-width: 150px; max-height: 150px; vertical-align: middle" class="text-center btn btn-success">
                                                        <span class="glyphicon glyphicon-check" aria-hidden="true"></span> <h2>@cell.Day</h2>
                                                    </div>
                                                </a>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <a href="@Url.Action("Step2", "ChangeHospitalRegistrationPage", new {Token = Model.Token, Date = cell.Date})" alt="">
                                                    <div style="height: 150px; width: 150px; max-width: 150px; max-height: 150px; vertical-align: middle" class="text-center btn btn-warning">
                                                        <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span> <h2>@cell.Day</h2>
                                                    </div>
                                                </a>
                                            </td>
                                        }
                                    }
                                    else
                                    {

                                        <td>
                                            <a href="@Url.Action("Step2", "ChangeHospitalRegistrationPage", new { Token = Model.Token, Date = cell.Date })" alt="">
                                                <div style="height: 150px; width: 150px; max-width: 150px; max-height: 150px; vertical-align: middle" class="text-center btn btn-info">
                                                    <span class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span> <h2>@cell.Day</h2>
                                                </div>
                                            </a>
                                        </td>

                                    }
                                }
                            }
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>