
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ServiceModels.ServiceCommandAnswers.HospitalRegistrationsCommandAnswers.GetChangeHospitalRegistrationsPageInformationCommandAnswer

<div class="panel panel-default">
    <table class="table">
        <tr>
            <th>
                Monday
            </th>
            <th>
                Tuesday
            </th>
            <th>
                Wednesday
            </th>
            <th>
                Thursday
            </th>
            <th>
                Friday
            </th>
            <th>
                Saturday
            </th>
            <th>
                Sunday
            </th>
        </tr>

        @foreach (var item in Model.Schedule)
        {
            <tr>
                @foreach (var cell in item.Cells.Values)
                {
                    if (cell.IsBlocked)
                    {
                        <td>
                            <div style="height: 200px; width: 200px; max-width: 200px; max-height: 200px; vertical-align: middle" class="text-center btn btn-block">
                                <h2>@cell.Day</h2>
                            </div>
                        </td>
                    }
                    else
                    {
                        if (cell.IsThisDate)
                        {
                            <td>
                                <div style="height: 200px; width: 200px; max-width: 200px; max-height: 200px; vertical-align: middle" class="text-center btn btn-primary">
                                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span> <h2>@cell.Day</h2>
                                </div>
                            </td>
                        }
                        else
                        {
                            if (cell.IsStarted)
                            {
                                if (cell.IsCompleted)
                                {

                                    <td>
                                        <div style="height: 200px; width: 200px; max-width: 200px; max-height: 200px; vertical-align: middle" class="text-center btn btn-success">
                                            <span class="glyphicon glyphicon-check" aria-hidden="true"></span> <h2>@cell.Day</h2>
                                        </div>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <div style="height: 200px; width: 200px; max-width: 200px; max-height: 200px; vertical-align: middle" class="text-center btn btn-info">
                                            <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span> <h2>@cell.Day</h2>
                                        </div>
                                    </td>
                                }
                            }
                            else
                            {
                                <td>
                                    <div style="height: 200px; width: 200px; max-width: 200px; max-height: 200px; vertical-align: middle" class="text-center btn btn-info">
                                        <span class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span> <h2>@cell.Day</h2>
                                    </div>
                                </td>
                            }
                        }
                    }
                }
            </tr>
        }

    </table>
</div>

