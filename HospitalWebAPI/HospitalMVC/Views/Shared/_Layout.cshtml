@using Enums.Enums
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>
    
    
    
    <div class="navbar-left">
        <ul class="nav nav-pills nav-stacked btn-toolbar">
            @*Links to add to main menu*@
            @if (ViewBag.FunctionList.Contains(MainMenuItem.OpenHospitalRegistrations))
            {
                <li>@Html.ActionLink("Открыть регистрацию", "Index", "Home")</li>
            }
            
            @if (ViewBag.FunctionList.Contains(MainMenuItem.ChangeHospitalRegistrations))
            {
                <li>@Html.ActionLink("Изменить данные регистрации", "Index", "Home")</li>
            }
            
            @if (ViewBag.FunctionList.Contains(MainMenuItem.ShowHospitalNotices))
            {
                <li>@Html.ActionLink("Просмотреть уведомления", "Index", "Home")</li>
            }
            
            @if (ViewBag.FunctionList.Contains(MainMenuItem.MakeClinicRegistration))
            {
                <li>@Html.ActionLink("Зарегистрировать", "Index", "Home")</li>
            }

            @if (ViewBag.FunctionList.Contains(MainMenuItem.BreakClinicRegistration))
            {
                <li>@Html.ActionLink("Отменить регистрацию", "Index", "Home")</li>
            }

            @if (ViewBag.FunctionList.Contains(MainMenuItem.ShowClinicNotices))
            {
                <li>@Html.ActionLink("Просмотреть уведомления", "Index", "Home")</li>
            }
        </ul>
    </div>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - System Doctor ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
