@using Enums.Enums
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span>@Html.ActionLink("Главная страница", "Index", "Home", new { Token = ViewBag.Token }, new { @class = "navbar-brand" })</span>
            </div>
        </div>
    </div>
    
    @*TODO: Create way to resolve it*@ 
    
    <div class="navbar-left">
        <ul class="nav nav-pills nav-stacked btn-toolbar">
            @*Links to add to main menu*@
            @if (ViewBag.FunctionList.Contains(MainMenuItem.OpenHospitalRegistrations))
            {
                if (ViewBag.DisabledFunctionList.Contains(MainMenuItem.OpenHospitalRegistrations))
                {
                    <li class="disabled">@Html.ActionLink("Открыть регистрацию", "Index", "Home", new { Token = ViewBag.Token }, new { @class = "nav" })</li>
                }
                else
                {
                    <li>@Html.ActionLink("Открыть регистрацию", "Index", "Home", new { Token = ViewBag.Token }, new { @class = "nav" })</li>
                }
            }
            
            @if (ViewBag.FunctionList.Contains(MainMenuItem.ChangeHospitalRegistrations))
            {
                if (ViewBag.DisabledFunctionList.Contains(MainMenuItem.ChangeHospitalRegistrations))
                {
                    <li class="disabled">@Html.ActionLink("Изменить данные регистрации", "Index", "Home", new { Token = ViewBag.Token }, new { @class = "nav" })</li>
                }
                else
                {
                    <li>@Html.ActionLink("Изменить данные регистрации", "Index", "Home", new { Token = ViewBag.Token }, new { @class = "nav" })</li>
                }
            }
            
            @if (ViewBag.FunctionList.Contains(MainMenuItem.ShowHospitalNotices))
            {
                if (ViewBag.DisabledFunctionList.Contains(MainMenuItem.ShowHospitalNotices))
                {
                    <li class="disabled">@Html.ActionLink("Просмотреть уведомления", "Index", "Home", new { Token = ViewBag.Token }, new { @class = "nav" })</li>
                }
                else
                {
                    <li>@Html.ActionLink("Просмотреть уведомления", "Index", "Home", new { Token = ViewBag.Token }, new { @class = "nav" })</li>
                }
            }
            
            @if (ViewBag.FunctionList.Contains(MainMenuItem.MakeClinicRegistration))
            {
                if (ViewBag.DisabledFunctionList.Contains(MainMenuItem.MakeClinicRegistration))
                {
                    <li class="disabled">@Html.ActionLink("Зарегистрировать", "Index", "Home", new { Token = ViewBag.Token }, new { @class = "nav" })</li>
                }
                else
                {
                    <li>@Html.ActionLink("Зарегистрировать", "Index", "Home", new { Token = ViewBag.Token }, new { @class = "nav" })</li>
                }
            }

            @if (ViewBag.FunctionList.Contains(MainMenuItem.BreakClinicRegistration))
            {
                if (ViewBag.DisabledFunctionList.Contains(MainMenuItem.BreakClinicRegistration))
                {
                    <li class="disabled">@Html.ActionLink("Отменить регистрацию", "Index", "Home", new { Token = ViewBag.Token }, new { @class = "nav" })</li>
                }
                else
                {
                    <li>@Html.ActionLink("Отменить регистрацию", "Index", "Home", new { Token = ViewBag.Token }, new { @class = "nav" })</li>
                }
            }

            @if (ViewBag.FunctionList.Contains(MainMenuItem.ShowClinicNotices))
            {
                if (ViewBag.DisabledFunctionList.Contains(MainMenuItem.ShowClinicNotices))
                {
                    <li class="disabled">@Html.ActionLink("Просмотреть уведомления", "Index", "Home", new { Token = ViewBag.Token }, new { @class = "nav" })</li>
                }
                else
                {
                    <li>@Html.ActionLink("Просмотреть уведомления", "Index", "Home", new { Token = ViewBag.Token }, new { @class = "nav" })</li>
                }
            }
        </ul>
    </div>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - System Doctor ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
