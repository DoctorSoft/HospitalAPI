<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - My ASP.NET Application</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

    </head>
    <body>

        @using ServiceModels.ServiceCommands.AuthorizationCommands

        @model GetTokenByUserCredentialsCommand

        @{
            Layout = null;
        }

        @using (Html.BeginForm("Authorize", "Login", FormMethod.Post, new { id = "logoutForm"}))
        {
            @Html.AntiForgeryToken()

            <div>
                <div class="input-group center-block container form-signin">

                    <div class="input-group">
                        <div class="h4 col-lg-4">@Html.DisplayNameFor(o => o.Login)</div>
                        <div class="col-lg-6">@Html.TextBoxFor(o => o.Login)</div>
                    </div>
                    <div class="input-group">
                        <div class="h4 col-lg-4">@Html.DisplayNameFor(o => o.Password)</div>
                        <div class="col-lg-3">@Html.TextBoxFor(o => o.Password)</div>
                    </div>
                    <div class="input-group col-lg-12">
                        <div class="col-lg-8">
                            
                        </div>
                        <div class="col-lg-1">
                            <input class="btn btn-sm btn-primary" type="submit" />
                        </div>
                    </div>

                </div>
            </div>

        }
    </body>

</html>