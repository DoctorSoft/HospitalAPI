@{
    ViewBag.Title = "Step2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ServiceModels.ServiceCommandAnswers.ClinicRegistrationsCommandAnswers.GetClinicRegistrationScheduleCommandAnswer

<div class="panel-body form-group">
    <div class="col-lg-10 panel-body ">
        <div class="col-lg-3">
            <label>Section profile:</label>
        </div>
        <div class="col-lg-7">
            @Model.SectionProfileId
        </div>

    </div>
    <div class="col-lg-10 panel-body ">
        <div class="col-lg-3">
            <label>Sex:</label>
        </div>
        <div class="col-lg-7">
            @Model.Sex
        </div>

    </div>
    <div class="col-lg-10 panel-body ">
        <div class="col-lg-3">
            <label>Age section:</label>
        </div>
        <div class="col-lg-7">
            @Model.AgeSection
        </div>

    </div>
    <div class="col-lg-10 panel-body ">
        <div class="col-lg-3">
            <label>Hospital:</label>
        </div>
        <div class="col-lg-7">
            @Html.DropDownListFor(answer => answer.AgeSection, Model.Hospitals.Select(pair => new SelectListItem
            {
                Selected = pair.Key == Model.CurrentHospitalId,
                Value = pair.Key.ToString(),
                Text = pair.Value,
                Disabled = false
            }), new { @class = "form-control" })
        </div>

    </div>
</div>

<div class="calendar">
    <div class="panel panel-default">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Monday
                    </th>
                    <th>
                        Tuesday
                    </th>
                    <th>
                        Wednesday
                    </th>
                    <th>
                        Thursday
                    </th>
                    <th>
                        Friday
                    </th>
                    <th>
                        Saturday
                    </th>
                    <th>
                        Sunday
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Schedule)
                {
                    <tr>
                        @foreach (var cell in item.Cells.Values)
                        {
                            if (cell.IsBlocked)
                            {
                                <td>
                                    <div style="height: 150px; width: 150px; max-width: 150px; max-height: 150px; vertical-align: middle" class="text-center btn btn-block">
                                        <h2>@cell.Day</h2>
                                    </div>
                                </td>
                            }
                            else
                            {
                                if (cell.IsThisDate)
                                {
                                    <td>
                                        <div style="height: 150px; width: 150px; max-width: 150px; max-height: 150px; vertical-align: middle" class="text-center btn btn-primary">
                                            <span class="glyphicon glyphicon-star" aria-hidden="true"></span> <h2>@cell.Day</h2>
                                            <br />
                                            <span class="badge">@cell.Count</span>
                                        </div>
                                    </td>
                                }
                                else
                                {
                                    if (cell.Count == 0)
                                    {
                                        <td>
                                            <a href="@Url.Action("Step2", "ChangeHospitalRegistrationPage", new {Token = Model.Token, Date = cell.Date})" alt="">
                                                <div style="height: 150px; width: 150px; max-width: 150px; max-height: 150px; vertical-align: middle" class="text-center btn btn-default">
                                                    <span class="glyphicon" aria-hidden="true"></span> <h2>@cell.Day</h2>
                                                    <br />
                                                    <span class="badge">@cell.Count</span>
                                                </div>
                                            </a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <a href="@Url.Action("Step2", "ChangeHospitalRegistrationPage", new {Token = Model.Token, Date = cell.Date})" alt="">
                                                <div style="height: 150px; width: 150px; max-width: 150px; max-height: 150px; vertical-align: middle" class="text-center btn btn-info">
                                                    <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span> <h2>@cell.Day</h2>
                                                    <br />
                                                    <span class="badge">@cell.Count</span>
                                                </div>
                                            </a>
                                        </td>

                                    }
                                }
                            }
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
