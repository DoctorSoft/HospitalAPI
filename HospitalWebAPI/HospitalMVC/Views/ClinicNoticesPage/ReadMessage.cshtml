@using Resources
@model ServiceModels.ServiceCommandAnswers.NoticesCommandAnswers.GetClinicMessageByIdCommandAnswer

@{
    ViewBag.Title = "ReadMessage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">@Model.Title</div>
    <div class="panel-body">
        <p>@Model.Text</p>
    </div>
</div>
<input type="button" title="Back" class="btn btn-default" value="@MainResources.ButtonBack" onclick="location.href='@Url.Action("Index", "ClinicNoticesPage", new { Token = Model.Token })'" />
<input type="button" title="Delete" class="btn btn-default" value="@MainResources.ButtonDeleteMessage" data-toggle="modal" data-target=@("#modalWindow"+Model.MessageId) />

@ModalWindowsHelper.AddActionModalWindow(helper: Html,
    headText: "Подтверждение",
    bodyText: "Вы уверены?",
    actionName: "RemoveMessage",
    controlName: "ClinicNoticesPage",
    paramsList: new { Token = Model.Token, MessageId = Model.MessageId },
    applyButtonName: "Удалить",
    id: Model.MessageId.ToString())