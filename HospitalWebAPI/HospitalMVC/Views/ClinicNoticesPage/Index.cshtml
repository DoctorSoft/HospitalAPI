
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ServiceModels.ServiceCommandAnswers.NoticesCommandAnswers.GetClinicNoticesPageInformationCommandAnswer

<div class="panel panel-default">
    <div class="panel-heading">Panel heading</div>
    <div class="panel-body">
        <p>Ваши сообщения</p>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Date
                </th>
                <th>
                    Sender
                </th>
                <th>

                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Messages)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Title, "ReadMessage", "ClinicNoticesPage", new { Token = Model.Token, MessageId = item.MessageId }, new {})
                    </td>
                    <td>
                        @if (@item.SendDate.Date == DateTime.Today)
                        {
                            @("сегодня, " + item.SendDate.ToString("t"))
                        }
                        else
                        {
                            @item.SendDate.ToString("d")
                        }
                    </td>
                    <td>
                        @item.AuthorName
                    </td>
                    <td>
                        @Html.ActionLink("Удалить", "RemoveMessage", "ClinicNoticesPage", new { Token = Model.Token, MessageId = item.MessageId }, new { })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

