
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ServiceModels.ServiceCommandAnswers.NoticesCommandAnswers.GetClinicNoticesPageInformationCommandAnswer

<table>
    <tr>
        <th>
            Title
        </th>
        <th>
            Date
        </th>
        <th>
            Sender
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model.Messages)
    {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @if (@item.SendDate.Date == DateTime.Today)
                {
                    @item.SendDate.ToString("t")
                }
                else
                {
                    @item.SendDate.ToString("d")
                }
        </td>
        <td>
            @item.AuthorName
        </td>
        <td>
            <a>Remove</a>
        </td>
    </tr>
    }

</table>

