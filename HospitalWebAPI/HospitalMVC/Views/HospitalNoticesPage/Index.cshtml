
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Resources
@model ServiceModels.ServiceCommandAnswers.NoticesCommandAnswers.GetHospitalNoticesPageInformationCommandAnswer

<table>
    <tr>
        <th>
            @MainResources.NoticeTableTitle
        </th>
        <th>
            @MainResources.NoticeTableDate
        </th>
        <th>
            @MainResources.NoticeTableSender
        </th>
        <th>
            
        </th>
    </tr>

    @foreach (var item in Model.Messages)
    {
        <tr>
            <td>
                @item.Title
            </td>
            <td>@if (@item.SendDate.Date == DateTime.Today)
                {
                    @item.SendDate.ToString("t")
                }
                else
                {
                    @item.SendDate.ToString("d")
                }
            </td>
            <td>
                @item.AuthorName
            </td>
            <td>
                <a>Remove</a>
            </td>
        </tr>
    }

</table>

