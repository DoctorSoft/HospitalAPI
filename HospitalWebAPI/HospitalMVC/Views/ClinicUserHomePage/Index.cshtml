@using System.Security.Principal

@model ServiceModels.ServiceCommandAnswers.MainPageCommandAnswers.GetClinicUserMainPageInformationCommandAnswer

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.WriteTitlePage("Clinic User Home Page", "h2")

@Html.WriteTextAndVariable("Здравствуйте, ", @Model.UserName, "!", "p")

@{
    if ((bool)!@Model.ReservationStatus)
    {
        @Html.WriteText("В данный момент регистрация мест в больницах недоступна.", "p")
        @Html.WriteTextAndVariable("Вы можете начать регистрацию с ", @Model.StartTimeReservation.ToString(), ".", "p")
    }
    else
    {
        @Html.WriteTextAndUrl("Если Вы хотите зарегистрировать место, то", "Index", "MakeClinicRegistrationPage", "нажмите сюда")
        @Html.WriteTextAndUrl("Если Вы хотите отменить регистрацию, то", "Index", "BreakClinicRegistrationPage", "нажмите сюда")
    }
}

@Html.WriteTextAndUrl("Если Вы хотите просмотреть ваши личные сообщения, то", "Index", "ClinicNoticesPage", "нажмите сюда")
 
@{
    if (Model.CountNewNotices > 0)
    {
        @Html.WriteTextAndVariable("У Вас", @Model.CountNewNotices.ToString(), "непрочитанное сообщение", "p") 
    }
}
